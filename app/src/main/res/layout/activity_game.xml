<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".activities.GameActivity">

    <LinearLayout
        android:id="@+id/headerLl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_header"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Anıtkabir"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:layout_margin="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text=" OYUN NASIL OYNANIR "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginVertical="190dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text="1) Öncelikle oynamak istediğin mekana tıkla."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginVertical="250dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text="2) Konumun teyit edildikten sonra oyun ekranına ulaşacaksın."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginVertical="310dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text="3) Oyun ekranında seni 4 adet ipucu bekliyor olacak."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginVertical="370dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text="4) İpuçlarını kullanarak DOĞRU eseri bulmayı amaçlayacaksın."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginVertical="430dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:background="@color/secondary"
        android:text="5) Bunları yaparken süreni doğru kullanmayı UNUTMA."
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <Button
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:layout_width="177dp"
        android:layout_height="53dp"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/shape_button_add_museum"
        android:backgroundTint="@color/secondary"
        android:text="BAŞLA"
        />

    <!--Bottom Navbar-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/linearBotIdGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:elevation="2dp"
        app:menu="@menu/item_menu"
        android:background="@drawable/round_corner"
        app:itemRippleColor="@android:color/transparent"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/item_selector"/>

</RelativeLayout>